<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true" android:state_window_focused="false"
          android:color="@color/colorPrimary"/>
    <!-- pressed -->
    <item android:state_checked="false" android:state_enabled="false" android:state_pressed="true"
          android:color="@color/colorPrimary"/>
    <!-- focused -->
    <item android:color="@color/colorPrimary" android:state_checked="true"/>
    <!-- default -->
    <item android:color="#333333" android:state_checked="false"/>

</selector>